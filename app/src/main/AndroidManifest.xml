<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lynford.android_ecommerce_project">
    
   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name="com.example.lynford.android_ecommerce_project.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/lynlags"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.lynford.android_ecommerce_project.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.lynford.android_ecommerce_project.activity.HomeActivity"></activity>
        <activity android:name="com.example.lynford.android_ecommerce_project.activity.ProductDetailsActivity"></activity>
        <activity android:name="com.example.lynford.android_ecommerce_project.activity.CartActivity"></activity>
    </application>

</manifest>